%div{:class => 'span-24 last', :id =>:header}
  %h1
    %a{ :href => 'http://dev.lchc.ucsd.edu/home' }
      %span{:class => :split}Laboratory of
      Comparative Human Cognition
%div{:class => 'span-24 last', :id =>:navigation}
  %div{:class => 'span-16 links'}
    %ul
      %li
        = link_to 'Home', 'http://dev.lchc.ucsd.edu/home'
      %li
        = link_to 'Research', 'http://dev.lchc.ucsd.edu/research'
      %li
        = link_to 'XMCA', 'http://xmca.ucsd.edu', :class => 'current'
      %li
        = link_to 'Publications', 'http://dev.lchc.ucsd.edu/publications'
      %li
        = link_to 'People', 'http://dev.lchc.ucsd.edu/people'
      %li
        = link_to 'About', 'http://dev.lchc.ucsd.eduold/about'

  %div{:class => 'span-8 last search'}
    - form_tag( search_path, :method => 'get' ) do
      %p
        %label{ :for => 'search' } Search:
        = text_field 'message', 'keywords', :size => 20, :value => @keywords.join( ' ' )
        %input{ :type => 'image', :src => '/images/search.png', :value => 'Go' }
